#include <iostream>
using namespace std;
int main()
{
    int x,y,result;
    char choice;
    cout<<"Enter two numbers : ";
    cin>>x>>y;
    cout<<"Menu: \n '' for Multiplication \n '/' for Division \n '+' for Addition \n '-' for Subtraction \n\n Please enter your choice : ";
    cin>>choice;
    switch(choice)
    {
        case '':result=x*y;
        cout<<result;
        break;

        case '/':result=x/y;
        cout<<result;
        break;

        case '+':result=x+y;
        cout<<result;
        break;

        case '-':result=x-y;
        cout<<result;
        break;

        default: cout<<"Sorry,that's not defined !Better luck next time!";

    }
    return 0;
}
